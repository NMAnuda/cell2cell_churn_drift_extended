FROM python:3.12-slim

# Install build essentials for pandas
RUN apt-get update && apt-get install -y build-essential gcc && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt
COPY src/ ./src
COPY data/ ./data

# FIXED: Set PYTHONPATH=/app for src imports + .py for Streamlit
CMD ["sh", "-c", "PYTHONPATH=/app streamlit run src/dashboard/dashboard.py --server.port=8501 --server.address=0.0.0.0"]